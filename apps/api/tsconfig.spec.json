{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@basevitale/shared": [
        "../../libs/shared/src/index.ts"
      ],
      "@basevitale/cortex-sdk": [
        "../../libs/cortex-sdk/src/index.ts"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/billing/rules/ngap_2024.json",
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ]
}