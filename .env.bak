# ==========================================
# 1. GLOBAL & ORCHESTRATION (Module O)
# ==========================================
NODE_ENV=development
PORT=3000

# LE TOGGLE HYBRIDE (Invariant Critique)
# MOCK  = Réponse statique immédiate (Pas de Python, Pas de Coût)
# CLOUD = Appel API OpenAI/Groq (Vitesse Dev)
# LOCAL = Appel Python + Ollama (Souveraineté Prod)
AI_MODE=LOCAL

# SECURITE (Module C+)
JWT_SECRET=votre_secret_tres_complexe_pour_dev_local
CORS_ORIGIN=http://localhost:4200

# ==========================================
# 2. MÉMOIRES (Persistance)
# ==========================================

# POSTGRES (Module E+ & Drafts)
# Note: Dans Docker, le host est le nom du service ('postgres'), pas 'localhost'
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=basevitale
POSTGRES_PASSWORD=basevitale_secure
POSTGRES_DB=basevitale_db

# NEO4J (Module S - Graphe de Connaissances)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=basevitale_graph_secure

# REDIS (Files d'attente & Sémaphore GPU)
REDIS_HOST=redis
REDIS_PORT=6379

# MINIO (Stockage Audio - S3 Compatible)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
BUCKET_NAME=consultations-audio

# ==========================================
# 3. INTELLIGENCE (Hémisphère Droit)
# ==========================================

# PYTHON SIDECAR (Module IA)
# L'URL interne dans le réseau Docker
AI_CORTEX_URL=http://localhost:8000

# CLOUD FALLBACK (Pour AI_MODE=CLOUD)
OPENAI_API_KEY=sk-votre-cle-api-ici
# Optionnel : GROQ_API_KEY=...

# ==========================================
# 4. MONITORING
# ==========================================
LOG_LEVEL=debug
DATABASE_URL=postgresql://basevitale:basevitale_secure@localhost:5432/basevitale_db
AI_SERVICE_URL=http://localhost:8000
OLLAMA_BASE_URL=http://host.docker.internal:11434/v1
OLLAMA_MODEL=llama3

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Timeout pour les appels AI Cortex (5 minutes pour permettre le chargement du modèle)
AI_CORTEX_TIMEOUT_MS=300000
